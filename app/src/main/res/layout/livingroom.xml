<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F9F9 "
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <TextView
        android:fontFamily="@font/kanit_regular"
        android:id="@+id/livingroomheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"

        android:text="Living Room"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/tiviliving"
        android:layout_width="170dp"
        android:layout_height="200dp"

        android:layout_below="@id/livingroomheader"
        android:layout_marginTop="30dp"
        android:background="@drawable/duongvien_goctron"
        android:backgroundTint="#E5E7E9">

        <ImageView
            android:id="@+id/tiviicon"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginTop="40dp"
            android:src="@drawable/tv" />

        <Switch
            android:id="@+id/swTivi"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tiviicon"

            android:layout_marginTop="20dp"
            android:fontFamily="@font/kanit_regular"
            android:padding="20dp"
            android:text="TV"
            android:textSize="15dp"


            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lampliving"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_below="@id/livingroomheader"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/duongvien_goctron"
        android:backgroundTint="#E5E7E9">

        <ImageView
            android:id="@+id/lampicon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ceilinglamp" />

        <Switch
            android:id="@+id/swLamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lampicon"

            android:layout_marginTop="20dp"
            android:text="Lamp"
            android:padding="20dp"
            android:fontFamily="@font/kanit_regular"
            android:textSize="15dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cameraliving"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_below="@id/tiviliving"
        android:layout_marginTop="30dp"
        android:background="@drawable/duongvien_goctron"
        android:backgroundTint="#E5E7E9">

        <ImageView
            android:id="@+id/cameraicon"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginTop="40dp"
            android:src="@drawable/camera" />

        <Switch
            android:id="@+id/swCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cameraicon"

            android:layout_marginTop="20dp"
            android:text="Camera"
            android:padding="20dp"
            android:fontFamily="@font/kanit_regular"
            android:textSize="15dp"

            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_below="@id/tiviliving"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/duongvien_goctron"
        android:backgroundTint="#E5E7E9">

        <ImageView

            android:id="@+id/fanicon"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginTop="40dp"
            android:src="@drawable/fan" />

        <Switch

            android:id="@+id/swFan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fanicon"

            android:layout_marginTop="20dp"
            android:fontFamily="@font/kanit_regular"
            android:padding="20dp"
            android:text="Fan"
            android:textSize="15dp"

            />


    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottom_nav"
        android:layout_alignParentBottom="true"
        app:itemIconTint="#FF8C00"
        app:itemTextColor="@color/black"
        android:background="@drawable/duongvien_goctron"
        app:menu="@menu/menu_bottom_nav" />
</RelativeLayout>
